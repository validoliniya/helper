{% extends 'base.html.twig' %}
{% block body %}
    <div>
        <div class="tabs-container">
            <ul class="tabs">
                {% for section in sections %}
                    <li class="{{ loop.index < 2 ? 'active' : '' }}">
                        <a href="">{{ section|capitalize }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="tabs-content">
                {% for index,section in sections %}
                    <div class="tabs-panel {{ index  < 1 ? 'active': '' }}" data-index="{{ index }}">
                        {% for link in links[section] %}
                            <div style="margin: 20px">
                                <img width="15px" height="15px" src="{{ asset('build/images/link.png') }}"> <a
                                        href="{{ link.href }}">{{ link.name }}</a>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {{ encore_entry_script_tags('tabs') }}
{% endblock %}
